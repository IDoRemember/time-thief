.detail-background {
    background: #fff;
}
.detail-img-box {
    position: relative;
    width:100%;
    text-align: center;
    overflow: hidden;
}
.detail-img {
    width:100%;
    position: absolute;
    left: 0;
    bottom:0;
    z-index: 1;
}
.detail-title {
    font-weight: 500;
    color:#fff;
    margin-top: -100rpx;
    margin-left: 20rpx;
    z-index: 1000;
    font-size: 32rpx;
    align-self: flex-start;
}
.detail-date {
    width: 90%;
    font-weight: 500;
    color:#9f9f9f;
    margin-top:-50rpx;
    margin-left: 20rpx;
    z-index: 1000;
    font-size: 24rpx;
    align-self: flex-start;
}
.detail-content {
    margin: 110rpx 0  10rpx;
    width: 95%;
    font-weight: 500;
    line-height: 40rpx;
    color: #9f9f9f;
    font-size: 28rpx;
}
.detail-strategy {
    width: 30rpx;
    height: 30rpx;
    vertical-align: middle;
}
.detail-address {
    display: inline-block;
    color:#749ccf;
    font-size: 24rpx;
    vertical-align: middle;
}
.detail-strategy-box {
    width:95%;
}
.detail-zan {
    width:30rpx;
    height: 30rpx;
    vertical-align: middle;
}
.detail-zan-number {
    display: inline-block;
    vertical-align: middle;
    color:#3f3f3f;
    font-size: 24rpx;
}
.detail-img-end {
    margin-top: 100rpx;
    height: 150rpx;   
    position: relative;
}
.detail-text-end {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    margin: 0 auto;
    z-index: 1000;
    color: #fff;
    line-height: 150rpx;
}