@import "tab-item/tab-item-template.wxss";
@import "my-dairy-item/my-dairy-item-template.wxss";
.my-avatar{
	width:100rpx;
	height:100rpx;
	margin-top: 250rpx;
	margin-right: 30px;
	border:2px solid #fff;
	border-radius:50%;
}
.my-top-box{
	display: flex;
	width: 100%;
	height:250rpx;
	align-items: center;
	flex-direction: row-reverse;
	background-size:100% ;
}
.my-nickname{
	margin-top: 200rpx;
	margin-right: 10px;
	color:#fff;
}
.my-tab-box{
	display: flex;
	margin-top: 30px;
	width: 100%;
	flex-direction: row;
	justify-content:space-around;
}

.my-dairy-box{
	display: none;
	flex-direction:column;
	margin-left: 30rpx;
	margin-right: 20rpx;
	padding: 10px;
	border-left: 1px solid #bbb;
}
.active{
	display: flex;
}