<import src="post-item/post-item-template.wxml"/>
<view class="container">
	<swiper vertical="true" indicator-dots="true" autoplay="true">
		<swiper-item><image class=" banner-img" mode="aspectFit" src=" /images/banana.jpg"/></swiper-item>
		<swiper-item><image class=" banner-img" mode="aspectFit" src=" /images/chuipaopao.jpg"/></swiper-item>
		<swiper-item><image class=" banner-img" mode="aspectFit" src=" /images/haibian.jpg"/></swiper-item>
	</swiper>
    <block wx:for="{{postList}}" wx:for-item="item" wx:for-index="idx" wx:key="{{idx}}">  
        <view catchtap="onPostTap" data-postid="{{idx}}">  
        <template is="postItem" data="{{...item}}"/>
        </view>
    </block>
</view>				