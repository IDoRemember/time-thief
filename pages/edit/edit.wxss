.edit-container{
	background: #fff;
}
.edit-image{
	width:200rpx;
	height: 200rpx;
	background: url("images/zhuye1.png")
}
.edit-title{
	margin-top: 30rpx;
	text-align: center;
}
.edit-textarea{
	width: 90%;
	padding:10rpx 30rpx;
	font-size: 32rpx;
	margin-bottom: 10rpx;
	height: 600rpx;
}
.edit-strategy{
	align-self: flex-start;
	margin-right: 10rpx;

	width: 30rpx;
	height: 30rpx;
}
.edit-address {
	display: inline-block;
}
.edit-address-box {
	font-size: 26rpx;
	margin-bottom: 20rpx;
}
.edit-image-show{
	width:200rpx;
	height:200rpx;
	margin:10rpx;
	border-radius: 5rpx;
}
.edit-img-box {
	margin-top:30rpx;
	font-size: 26px;
}
.edit-check {
	width: 30rpx;
	height: 30rpx;
	border-radius: 50%;
	display: flex;
	margin-right: 10rpx;
	align-items: center;
	text-align: center;
	border:1px solid #9f9f9f;
}
.edit-check-circle{
	margin: 0 auto;
	width: 15rpx;
	height: 15rpx;
	border-radius: 50%;
	background: #1f1f1f;
}